{
  "name": "gpc-kiwiko",
  "displayName": "GPC Scripting",
  "description": "GPC Compatibility",
  "publisher": "zKiwiko",
  "version": "1.1.0",
  "icon": "images/cronus.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/zKiwiko/vscode-gpc-extension.git"
  },
  "gallerBanner": {
    "color": "#000000",
    "theme": "dark",
    "dark": "./images/cronus.png",
    "light": "./images/cronus.png"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./client/src/extension.js",
  "activationEvents": [
    "onstartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.build",
        "title": "GPC: Build project with Toriel"
      }
    ],
    "languages": [
      {
        "id": "gpc",
        "aliases": [
          "GPC",
          "gpc"
        ],
        "extensions": [
          ".gpc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gpc",
        "scopeName": "source.gpc",
        "path": "./syntaxes/gpc.tmLanguage.json"
      }
    ]
  },

  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/vscode": "^1.98.0",
    "@vscode/test-electron": "^2.4.1"
  },
  "runtimeDependencies": [
    {
      "platform": [
        "win32",
        "linux",
        "darwin"
      ],
      "binaries": {
        "win32": "./bin/window/toriel-bt.exe",
        "linux": "./bin/linux/toriel-bt-linux",
        "darwin": "./bin/macos/toriel-bt-macos"
      }
    }
  ],
  "workspaces": [
    "client",
    "server"
  ],
  "type": "module"
}
