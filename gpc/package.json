{
  "name": "gpc-kiwiko",
  "displayName": "GPC Scripting",
  "description": "GPC Compatibility",
  "version": "1.0.0",
  "repository": "",
  "gallerBanner": {
    "color": "#000000",
    "theme": "dark",
    "id": "./images/cronus.png"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./client/src/extension.js",
  "activationEvents": [
    "onLanguage:gpc"
  ],
  "contributes": {
    "languages": [
      {
        "id": "gpc",
        "aliases": [
          "GPC",
          "gpc"
        ],
        "extensions": [
          ".gpc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gpc",
        "scopeName": "source.gpc",
        "path": "./syntaxes/gpc.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "extension.command1",
        "title": "GPC: Command 1"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.command1",
          "group": "navigation",
          "when": "editorLangId == gpc"
        }
      ]
    }
  },
  "scripts": {
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.90.0",
    "@vscode/test-electron": "^2.3.8"
  },
  "workspaces": [
    "client",
    "server"
  ]
}
